{
  "name": "devlink",
  "version": "1.0.0",
  "description": "Social Media application for developers",
  "main": "/server/dist/server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server/dist/server.js",
    "server": "npx nodemon -e ts,js,graphql,env server/src/server.ts",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix client && npm run build --prefix client && npx tsc",
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha **/**/*.test.js",
    "test-watch": "nodemon --exec \"npm test\""
  },
  "author": "Ray Bernard",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/gravatar": "^1.8.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.7.19",
    "@types/validator": "^13.7.7",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/utils": "^8.12.0",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalars": "^1.18.0",
    "graphql-tools": "^8.3.6",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.1",
    "nodemailer": "^6.8.0",
    "validator": "^13.7.0"
  }
}
